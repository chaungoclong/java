package inClass;
import java.util.*;
import basic.Execute;

public class Manager extends Execute{
	private Scanner scan = new Scanner(System.in);
	private ArrayList<Student> ListStudents;
	
	public Manager() {
		this.ListStudents = new ArrayList<Student>();
	}
	
	// add student
	public void addStudent() {
		echo ("===NEW STUDENT===\n");
		try {
			Student newStudent = addStudentRoot();
			ListStudents.add(newStudent);
			echo ("add success!\n");
		} catch (Exception e) {
			echo(e.getMessage());
			e.printStackTrace();
		}
	}
	
	public Student addStudentRoot() {
		String ClassName = inputClassName();
		float C = inputC();
		float PHP = inputPHP();
		
		return new Student(ClassName, C, PHP);
	}
	
	public String inputClassName() {
		echo ("Class Name >");
		String ClassName = scan.nextLine();
		return ClassName;
	}
	
	public int inputID() {
		echo ("ID >");
		int ID = scan.nextInt();
		scan.nextLine();
		return ID;
	}
	
	public float inputC() {
		echo ("C >");
		float C = scan.nextFloat();
		scan.nextLine();
		return C;
	}
	
	public float inputPHP() {
		echo ("PHP >");
		float PHP = scan.nextFloat();
		scan.nextLine();
		return PHP;
	}
	
	// show student
	public void showListStudent() {
		for (Student student : ListStudents) {
			student.showInfo();
		}
	}
}
