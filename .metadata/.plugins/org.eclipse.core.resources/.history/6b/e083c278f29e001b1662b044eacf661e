package inClass;

public class Student {
	private static int RootID = 0;
	private int ID;
	private String ClassName;
	private float C;
	private float PHP;
	
	public Student() {
		this.ID = ++RootID;
		this.ClassName = "";
		this.C = 0;
		this.PHP = 0;
	}
	
	public Student(String ClassName, float C, float PHP) {
		this.ClassName = ClassName;
		this.C = C;
		this.PHP = PHP;
	}
	
	//getter
	public int getID() {
		return this.ID;
	}
	
	public String getClassName() {
		return this.ClassName;
	}
	
	public float getC() {
		return this.C;
	}
	
	public float getPHP() {
		return this.PHP;
	}
	
	
	// setter
	public void setID(int ID) {
		this.ID = ID;
	}

	public void setClassName(String ClassName) {
		this.ClassName = ClassName;
	}
	
	public void setC(float C) {
		this.C = C;
	}
	
	public void setPHP(int PHP) {
		this.PHP = PHP;
	}
	
	//show info
	public void showInfo() {
		System.out.println(
				"ID:" + this.ID + "\nClass Name:" + this.ClassName + "\nC:" + this.C + "\nPHP:" + this.PHP + "\n");
	}
}
