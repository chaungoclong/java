package inClass;

public class Student {
	private static int RootID = 0;
	private int ID;
	private String ClassName;
	private float C;
	private float PHP;
	private float markAVG;
	private String rank;
	
	public Student() {
		this.setID(++RootID);
		this.setClassName("");
		this.setC(0);
		this.setPHP(0);
		this.setMarkAVG();
		this.setRank();
	}
	
	public Student(String ClassName, float C, float PHP) {
		this.setID(++RootID);
		this.setClassName(ClassName);
		this.setC(C);
		this.setPHP(PHP);
		this.setMarkAVG();
		this.setRank();
	}
	
	//getter
	public int getID() {
		return this.ID;
	}
	
	public String getClassName() {
		return this.ClassName;
	}
	
	public float getC() {
		return this.C;
	}
	
	public float getPHP() {
		return this.PHP;
	}
	
	public float getMarkAVG() {
		return this.markAVG;
	}
	
	public String getRank() {
		return this.rank;
	}
	
	
	// setter
	public void setID(int ID) {
		this.ID = ID;
	}

	public void setClassName(String ClassName) {
		this.ClassName = ClassName;
	}
	
	public void setC(float C) {
		this.C = C;
	}
	
	public void setPHP(float PHP) {
		this.PHP = PHP;
	}
	
	public void setMarkAVG() {
		this.markAVG = (this.C + this.PHP) / 2;
	}
	
	public void setRank() {
		if (this.markAVG >= 8) {
			this.rank = "GIOI";
		} else if (this.markAVG >= 6) {
			this.rank = "KHA";
		} else if(this.markAVG >= 5) {
			this.rank = "TRUNG BINH";
		} else {
			this.rank = "KHONG DAT";
		}
	}
	
	//show info
	public void showInfo() {
		System.out.println(
				"ID:" + this.ID 
				+ "\nClass Name:" + this.ClassName 
				+ "\nC:" + this.C 
				+ "\nPHP:" + this.PHP 
				+ "\nAVG:" + this.markAVG
				+ "\nRank:" + this.rank
				+ "\n");
	}
}
