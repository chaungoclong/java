package learn;
import basic.Execute;
import java.util.*;

public class Main extends Execute {

	public static void main(String[] args) {
		int key = 0;
		Scanner scan = new Scanner(System.in);
		//Manager manager = new Manager();
		Student a = new Student();
		Student b = new Student();
		a.ShowInfo();
		b.ShowInfo();
		do {
			Menu();
			key = scan.nextInt();
			
			switch (key) {
			case 1:
				echo("add");
				//manager.AddStudent();
				break;
			
			case 2:
				echo("edit");
				break;
			
			case 3:
				echo("delete");
				break;
				
			case 4:
				//manager.DisplayListStudent();
				break;

			default:
				key = 0;
				break;
			}
		} while (key != 0);
	}
	
	public static void Menu() {
		echo("===========MENU==============\n1-Add Student\n2-Edit student\n3-Delete Student\n4-Display\n0-Exit\n");
	}
}
